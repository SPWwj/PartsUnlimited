@using System.Runtime.InteropServices
<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <ShoppingCartDetailsWidget ReadOnly="@(false || !_isBrowser)" @attributes="Params" />
        </Authorized>
        <Authorizing><ShoppingCartDetailsWidget ReadOnly="@(false || !_isBrowser)" @attributes="Params" /></Authorizing>
        <NotAuthorized>
            <ShoppingCartDetailsWidget ReadOnly="true" @attributes="Params" />
            <Authenticate></Authenticate>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code{
    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string,object> Params { get; set; }

    private bool _isBrowser = RuntimeInformation.IsOSPlatform(OSPlatform.Create("browser"));
}